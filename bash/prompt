# Colors
BLUE="\[\033[0;34m\]"
LIGHT_GRAY="\[\033[0;37m\]"
GREEN="\[\033[0;32m\]"
LIGHT_GREEN="\[\033[1;32m\]"
RED="\[\033[0;31m\]"
LIGHT_RED="\[\033[1;31m\]"
WHITE="\[\033[1;37m\]"
YELLOW="\[\033[0;33m\]"
COLOR_NONE="\[\e[0m\]"

# More git info in prompt
GIT_PS1_SHOWDIRTYSTATE=1
GIT_PS1_SHOWUNTRACKEDFILES=1
GIT_PS1_SHOWUPSTREAM="auto"
PS1="${LIGHT_RED}\w${GREEN}"'$(__git_ps1 " %s")'"${COLOR_NONE} \$ "

