#!/bin/sh

cd $(dirname $(realpath "$0"))

for file in *; do case "$file" in
    fish | pep8 | vim) continue;;
    DarkPastel.terminal | install | README.md) continue;;
    *) ln -fhs "$PWD/$file" "$HOME/.$file" &>/dev/null && echo "linking $file";;
esac done

mkdir -p "$HOME/.config/fish"
for file in fish/*; do
    base=${file##*/}
    ln -fhs "$PWD/$file" "$HOME/.config/fish/$base" &>/dev/null && echo "linking .config/fish/$base"
done

mkdir -p "$HOME/.config"
ln -fhs "$PWD/pep8" "$HOME/.config/pep8" &>/dev/null && echo "linking .config/pep8"

ln -fhs "$PWD/vim" "$HOME/.vim" &>/dev/null && echo "linking .vim"
