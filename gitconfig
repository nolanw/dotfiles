  editor = mate -w -l 1
  trustctime = false
[alias]
  ap = add -p
  b = branch
  c = commit --verbose
  ca = commit --amend --verbose
  ccc = commit --amend -C HEAD
  d = diff --color-words
  l = log --oneline --decorate
  o = checkout
  ob = checkout -b
  r = rebase
  rma = !git ls-files --deleted -z | xargs -0 git rm
  s = status -sb
