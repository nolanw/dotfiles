[user]
  name = Nolan Waite
  email = nolan@nolanw.ca

[alias]
  ap = add -p
  b = branch
  c = commit --verbose
  ccc = commit --amend -C HEAD
  ff = merge --ff-only
  noff = merge --no-ff
  o = checkout
  ob = checkout -b
  d = diff --color-words
  l = log --oneline --decorate
  r = rebase
  s = status -sb
  sub = submodule update --init --recursive

[branch]
  autosetuprebase = always

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  attributesfile = ~/.global_gitattributes
  excludesfile = ~/.global_gitignore
  quotepath = false
  autocrlf = input
  trustctime = false

[credential]
  helper = osxkeychain

[diff]
  algorithm = patience
  compactionHeuristic = true
  noprefix = true
  tool = "kaleidoscope"

[diff "plist"]
  textconv = plutil -convert xml1 -o -

[difftool]
  prompt = false

[difftool "bbdiff"]
  cmd = bbdiff --wait --resume --ignore-spaces -- "$LOCAL" "$REMOTE"

[difftool "kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path "$MERGED" -- "$LOCAL" "$REMOTE"

[github]
  user = nolanw

[init]
  defaultBranch = main

[merge]
  conflictstyle = diff3
  tool = kaleidoscope

[mergetool]
  prompt = false

[mergetool "kaleidoscope"]
  cmd = ksdiff --merge --output "$MERGED" --base "$BASE" -- "$LOCAL" "$REMOTE"

[pull]
  rebase = true

[push]
  default = current
  followTags = true

[rebase]
  autoStash = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
