[user]
    name = Nolan Waite
    email = nolan@nolanw.ca
[core]
    excludesfile = ~/.global_gitignore
    quotepath = false
    autocrlf = input
[alias]
    a = add
    ap = add -p
    c = commit --verbose
    ca = commit --amend --verbose
    # Amend previous commit, reusing commit message.
    caa = commit -a --amend -C HEAD 
    # Pretty one-line log.
    hist = log --pretty=format:\"%h %ad | %s %d [%an]\" --graph --date=short
    s = status --short
[github]
    user = nolanw
[push]
    default = tracking
