[alias]
  ap = add -p
  b = branch
  c = commit --verbose
  ccc = commit --amend -C HEAD
  o = checkout
  ob = checkout -b
  d = diff --color-words
  l = log --oneline --decorate
  r = rebase
  s = status -sb
[branch]
  autosetuprebase = always
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  attributesfile = ~/.global_gitattributes
  excludesfile = ~/.global_gitignore
  quotepath = false
  autocrlf = input
  editor = ~/.giteditor
  trustctime = false
[credential]
  helper = osxkeychain
[diff]
  algorithm = patience
  compactionHeuristic = true
[diff "plist"]
  textconv = plutil -convert xml1 -o -
[github]
  user = nolanw
[merge]
  conflictstyle = diff3
[pull]
  rebase = true
[push]
  default = simple
  followTags = true
[rebase]
  autoStash = true
