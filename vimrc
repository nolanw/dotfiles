filetype plugin indent on

set autoread

set backspace=indent,eol,start

set cursorline

set history=10000

set ignorecase smartcase

set incsearch

set nojoinspaces

set ruler

set scrolloff=3

set showcmd

set wildmenu

" Hide gunk
set backupdir=/tmp
set directory=/tmp

" Tabs tabs tabs
set autoindent
set expandtab
set shiftwidth=0
set softtabstop=4
set tabstop=4

syntax on
